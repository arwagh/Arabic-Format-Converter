#:import utils kivy.utils
#:import alg bidi.algorithm
#:import arabic_reshaper arabic_reshaper
WindowManager:
    MainWindow:
    ImagesWindow:
    AudiosWindow:
    VideosWindow:



<MainWindow>   
    name: "main_window"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 5
        spacing: 5



        Button:
            id: img
            text: alg.get_display(arabic_reshaper.reshape("صورة"))
            font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"
            font_size: 32
            background_normal: ''
            #Using RGB
            background_color: (141/255.0, 165/255.0, 217/255.0, 1)
            on_release:
                app.root.current = "images_window"
                root.manager.transition.direction = "left"
                    
                

        Button:
            id: audio
            text: alg.get_display(arabic_reshaper.reshape("مقطع صوتي"))
            font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"
            font_size: 32
            background_normal: ''
            #Using RGB
            background_color: (141/255.0, 165/255.0, 217/255.0, 1)
            on_release:
                app.root.current = "audios_window"
                root.manager.transition.direction = "left"
                    

            
        Button:
            id: video
            text: alg.get_display(arabic_reshaper.reshape("مقطع مرئي"))
            font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"
            font_size: 32
            background_normal: ''
            #Using RGB
            background_color: (141/255.0, 165/255.0, 217/255.0, 1)
            on_release:
                app.root.current = "videos_window"
                root.manager.transition.direction = "left"


        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.3)

            
            Button:
                text: alg.get_display(arabic_reshaper.reshape("عن البرنامج"))
                font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"

            Button:
                text: alg.get_display(arabic_reshaper.reshape("الإعدادات"))
                font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"

            Button:
                text: alg.get_display(arabic_reshaper.reshape("الرئيسية"))
                font_name:"fonts/ArbFONTS-AwanZaman-Regular.ttf"
                on_release:
                    app.root.current = "main_window"
                    root.manager.transition.direction = "left"




